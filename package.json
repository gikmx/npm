{
    "name": "@gik/npm",
    "version": "0.0.26",
    "description": "GIK's take on NPM scripts.",
    "license": "MIT",
    "homepage": "https://github.com/gikmx/npm",
    "contributors": [
        "Héctor Menéndez <hector@gik.mx>"
    ],
    "keywords": [
        "npm",
        "yarn",
        "script",
        "scripts",
        "npm scripts",
        "yarn scripts"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gikmx/npm.git"
    },
    "bugs": {
        "url": "https://github.com/gikmx/npm/issues"
    },
    "engines": {
        "node": ">=6.11.3"
    },
    "bin": {
        "gik-npm": "./lib/bin.js"
    },
    "directories": {
        "src": "./src",
        "out": "./lib",
        "test": "./test"
    },
    "scripts": {
        "command:docs": "documentation",
        "command:lint": "eslint",
        "command:test": "ava",
        "ver:beta": "./lib/bin.js version:prerelease",
        "ver:commit": "./lib/bin.js version:patch",
        "lint:docs": "./lib/bin.js docs:lint",
        "lint:code": "eslint ./src",
        "lint": "npm run lint:code -s && npm run lint:docs -s",
        "docs": "npm run lint:docs -s && ./lib/bin.js docs",
        "build:cli": "rm -Rvf ./lib && babel -d ./lib ./src && chmod +x ./lib/bin.js",
        "build:gik": "./lib/bin.js build && chmod +x ./lib/bin.js",
        "build": "npm run lint:code -s && (npm run build:gik -s || npm run build:cli -s || exit 1) && npm run docs -s",
        "start": "nodemon -e js,json -w ./src -x 'for x in `echo \"build\" \"${RUN[@]}\"`; do npm run \"$x\" -s || exit 1; done'",
        "precommit": "npm run build -s && npm run ver:commit -s",
        "pub:beta": "npm run build -s && npm run ver:beta -s && npm publish --tag beta",
        "pub:release": "npm run build -s && npm publish --tag latest"
    },
    "peerDependencies": {},
    "dependencies": {
        "ava": "^0.22.0",
        "babel-core": "^6.26.0",
        "babel-preset-env": "^1.6.0",
        "babel-preset-stage-0": "^6.24.1",
        "babel-register": "^6.26.0",
        "chalk": "^2.1.0",
        "debug": "^3.1.0",
        "deepmerge": "^1.5.2",
        "documentation": "^5.3.2",
        "eslint": "^4.8.0",
        "husky": "^0.14.3",
        "mustache": "^2.3.0",
        "nodegit": "^0.20.2",
        "npm": "^5.4.2",
        "read-package-json": "^2.0.12",
        "rxjs": "^5.4.3",
        "shelljs": "^0.7.8"
    },
    "devDependencies": {
        "@gik/eslint-config-node": "0.0.1",
        "babel-cli": "^6.26.0",
        "nodemon": "^1.12.1"
    },
    "ava": {
        "require": [
            "babel-register"
        ],
        "babel": {
            "extends": "./.babelrc"
        }
    }
}
