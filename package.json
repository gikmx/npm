{
    "name": "@gik/npm",
    "version": "0.1.14",
    "description": "Scripts for your ECMAScript workflow.",
    "license": "MIT",
    "homepage": "https://github.com/gikmx/npm",
    "contributors": [
        "Héctor Menéndez <hector@gik.mx>"
    ],
    "keywords": [
        "npm",
        "yarn",
        "script",
        "scripts",
        "npm scripts",
        "yarn scripts"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gikmx/npm.git"
    },
    "bugs": {
        "url": "https://github.com/gikmx/npm/issues"
    },
    "os": [
        "linux",
        "darwin"
    ],
    "engines": {
        "node": ">=12.13.0",
        "npm": ">=6.13.7"
    },
    "bin": {
        "gik-npm": "./lib/bin.js"
    },
    "directories": {
        "test": "__tests__",
        "src": "./src",
        "out": "./lib"
    },
    "scripts": {
        "cmd:lint": "eslint",
        "cmd:babel": "rm -Rf ./lib && babel --config-file ./.babelrc -d ./lib ./src && chmod +x ./lib/bin.js",
        "build": "npm run cmd:babel -s && gik-npm lint src && gik-npm build && chmod +x ./lib/bin.js",
        "test": "gik-npm lint test && gik-npm test && chmod +x ./lib/bin.js",
        "verify": "npm run build -s && npm run test -s",
        "start": "gik-npm start 'npm run verify -s'",
        "pub": "npm run verify -s && gik-npm docs && npm publish --access public --tag",
        "precommit": "npm run verify -s && gik-npm version $([ -z $VER ] && echo patch || echo $VER) && gik-npm docs"
    },
    "peerDependencies": {},
    "dependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.4",
        "@babel/node": "^7.8.4",
        "@babel/polyfill": "^7.8.3",
        "@babel/preset-env": "^7.8.4",
        "@babel/preset-stage-2": "^7.8.3",
        "@babel/register": "^7.8.3",
        "@gik/tools-configurator": "0.0.6",
        "@gik/tools-streamer": "0.0.11",
        "babel-plugin-dynamic-import-node": "^2.3.0",
        "deepmerge": "^4.2.2",
        "eslint": "^6.8.0",
        "handlebars": "^4.7.3",
        "husky": "^4.2.3",
        "jest": "^25.1.0",
        "jest-cli": "^25.1.0",
        "jsdoc-babel": "^0.5.0",
        "jsdoc-to-markdown": "^5.0.3",
        "mkdirp": "^1.0.3",
        "nodegit": "^0.26.4",
        "nodemon": "^2.0.2",
        "npm": "^6.13.7",
        "read-package-json": "^2.1.1",
        "rimraf": "^3.0.2",
        "tmp": "^0.1.0",
        "webpack": "^4.41.6",
        "webpack-dev-server": "^3.10.3",
        "webpack-merge": "^4.2.2"
    },
    "devDependencies": {
        "@gik/eslint-config-node": "0.0.10"
    }
}
