{
    "name": "@gik/npm",
    "version": "0.0.13",
    "description": "GIK's take on NPM scripts.",
    "license": "MIT",
    "homepage": "https://github.com/gikmx/npm",
    "contributors": [
        "Héctor Menéndez <hector@gik.mx"
    ],
    "keywords": [
        "npm",
        "yarn",
        "script",
        "scripts",
        "npm scripts",
        "yarn scripts"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gikmx/npm.git"
    },
    "bugs": {
        "url": "https://github.com/gikmx/npm/issues"
    },
    "engines": {
        "node": ">=6.11.3"
    },
    "bin": {
        "gik-npm": "./lib/bin.js"
    },
    "scripts": {
        "command:jsdoc2md": "jsdoc2md",
        "ver:beta": "./lib/bin.js version:prerelease",
        "ver:commit": "./lib/bin.js version:patch",
        "ver:release": "./lib/bin.js version:minor",
        "release:beta": "npm run build -s && npm run ver:beta -s && npm publish --tag beta",
        "release": "npm run build -s && npm run ver:release -s && npm publish --tag latest",
        "lint": "eslint ./src",
        "build:cli": "rm -Rvf ./lib && babel -d ./lib ./src && chmod +x ./lib/bin.js",
        "build:gik": "./lib/bin.js build && chmod +x ./lib/bin.js",
        "build": "npm run lint -s && (npm run build:gik 2> /dev/null || npm run build:cli -s)",
        "docs": "./lib/bin.js docs",
        "start": "nodemon -e js,json -w ./src -x 'for x in `echo \"build\" \"${RUN[@]}\"`; do npm run \"$x\" -s || exit 1; done'",
        "precommit": "npm run docs -s && npm run ver:commit -s"
    },
    "peerDependencies": {},
    "dependencies": {
        "babel-core": "^6.26.0",
        "babel-preset-env": "^1.6.0",
        "babel-preset-stage-0": "^6.24.1",
        "chalk": "^2.1.0",
        "debug": "^3.1.0",
        "documentation": "^5.3.2",
        "husky": "^0.14.3",
        "nodegit": "^0.20.2",
        "npm": "^5.4.2",
        "rxjs": "^5.4.3",
        "shelljs": "^0.7.8"
    },
    "devDependencies": {
        "@gik/eslint-config-node": "0.0.1",
        "babel-cli": "^6.26.0",
        "eslint": "^4.7.2",
        "nodemon": "^1.12.1"
    }
}
